@using DAL.Identity
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        // This part is shown ONLY if the user is signed in
        <li class="nav-item">
            <a class="nav-link text-dark">Hello @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form asp-controller="Account" asp-action="Logout" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        // This part is shown if the user is NOT signed in
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="SignUp">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="SignIn">Login</a>
        </li>
    }
</ul>