@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
    <div class="agileits-top">
        <form asp-action="SignIn" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input class="text email" asp-for="Email" placeholder="Email" required="">
            <span asp-validation-for="Email" class="text-danger"></span>

            <input class="text" asp-for="Password" placeholder="Password" required="">
            <span asp-validation-for="Password" class="text-danger"></span>

            <div class="wthree-text">
                <label class="anim">
                    <input asp-for="RememberMe" class="checkbox">
                    <span>Remember Me</span>
                </label>
                <div class="clear"> </div>
            </div>

            <input type="submit" value="LOGIN">
        </form>
        <p>Don't have an Account? <a asp-action="SignUp"> Sign Up Now!</a></p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}