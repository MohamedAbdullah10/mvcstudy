@model IEnumerable<DepartmentToReturnDto>
@{
    ViewData["Title"] = "Department";
}

<h1>All Departments</h1>
<br />
<a class="btn btn-primary" asp-controller="Department" asp-action="Create">Create New Department</a>
<br/>

<table class="table table-striped table-hover mt-2">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Code)</th>
            <th>@Html.DisplayNameFor(m => m.CreationDate)</th>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="6" class="text-center text-danger">No departments found.</td>
            </tr>
        }
        else
        {
            @foreach (var d in Model)
            {
                <tr>
                    <td>@d.Code</td>
                    <td>@d.CreationDate</td>
                    <td>@d.Name</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@d.Id" class="btn btn-warning">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@d.Id" class="btn btn-success">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@d.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
