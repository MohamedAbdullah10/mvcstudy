@model DepartmentDetailsToReturnDto

@{
    ViewData["Title"] = "Delete Department";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">
                <i class="fas fa-trash-alt"></i> Confirm Delete - @Model.Name
            </h4>
        </div>
        <div class="card-body">
            <ul class="nav nav-tabs" id="deptTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="general-tab" data-bs-toggle="tab" data-bs-target="#general"
                            type="button" role="tab" aria-controls="general" aria-selected="true">
                        <i class="fas fa-info-circle"></i> General
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="admin-tab" data-bs-toggle="tab" data-bs-target="#admin"
                            type="button" role="tab" aria-controls="admin" aria-selected="false">
                        <i class="fas fa-user-shield"></i> Administrator
                    </button>
                </li>
            </ul>

            <div class="tab-content p-3" id="deptTabsContent">
                <div class="tab-pane fade show active" id="general" role="tabpanel" aria-labelledby="general-tab">
                    <dl class="row">
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        <dt class="col-sm-3">Code</dt>
                        <dd class="col-sm-9">@Model.Code</dd>

                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Model.Description</dd>

                        <dt class="col-sm-3">Creation Date</dt>
                        <dd class="col-sm-9">@Model.CreationDate</dd>
                    </dl>
                </div>

                <div class="tab-pane fade" id="admin" role="tabpanel" aria-labelledby="admin-tab">
                    <dl class="row">
                        <dt class="col-sm-3">Created By</dt>
                        <dd class="col-sm-9">@Model.CreationBy</dd>

                        <dt class="col-sm-3">Created On</dt>
                        <dd class="col-sm-9">@Model.CreationOn</dd>

                        <dt class="col-sm-3">Last Modified By</dt>
                        <dd class="col-sm-9">@Model.LastModifiedBy</dd>

                        <dt class="col-sm-3">Last Modified On</dt>
                        <dd class="col-sm-9">@Model.LastModifiedOn</dd>

                        <dt class="col-sm-3">Is Deleted</dt>
                        <dd class="col-sm-9">@(Model.IsDeleted ? "Yes" : "No")</dd>
                    </dl>
                </div>
            </div>

            <hr />
            <div class="alert alert-warning">
                <strong>Warning:</strong> This action cannot be undone. Are you sure you want to delete this department?
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i> Confirm Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Ensure Bootstrap tabs work if needed
        var triggerEl = document.querySelector('#deptTabs button[data-bs-toggle="tab"]');
        if (triggerEl) {
            bootstrap.Tab.getOrCreateInstance(triggerEl).show();
        }
    </script>
}
